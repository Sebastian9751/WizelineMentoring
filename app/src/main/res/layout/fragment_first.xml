<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#19F6ACAC"
    tools:context=".FirstFragment">

    <TextView
        android:id="@+id/textSolaire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#5BBCC8"
        app:layout_constraintBottom_toTopOf="@+id/imgSolaire"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/solaire"/>

    <ImageView
        android:id="@+id/imgSolaire"
        android:layout_width="322dp"
        android:layout_height="419dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textSolaire" />


</androidx.constraintlayout.widget.ConstraintLayout>